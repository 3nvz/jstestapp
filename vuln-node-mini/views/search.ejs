<html>
<head>
  <meta charset="utf-8" />
  <title>search</title>
</head>
<body>
  <h1>Search notes</h1>
  <form method="GET" action="/search">
    <input name="q" value="<%= q %>" />
    <button type="submit">Search</button>
  </form>

  <p>Query: <code><%= q %></code></p>

  <h2>Results</h2>
  <ul>
    <% (rows || []).forEach(r => { %>
      <li><b><%= r.title %></b> (<%= r.owner %>) â€” <%= r.body %></li>
    <% }) %>
  </ul>

  <p><a href="/">home</a></p>
</body>
</html>
